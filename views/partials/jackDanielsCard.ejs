<ul class="sectionCard">
    <% for( let i = 0; i < 4; i++ ) { %>
        <a class="linkCard" href=<%= `/product/${product.id}` %>>
            <li class="card">
                <img class="cardImg" src="<%=product.image %> " alt="Jack daniels">
                <article class="cardText">
                    <div class="descriptionCard">
                        <h4><%= product.title  %></h4>
                    </div>
                    <div class="priceCard">
                        <span><%= product.price  %> </span>
                        <span>PUNTOS</span>
                    </div>
                </article>
            </li>
        </a>
    <% } %>
</ul>